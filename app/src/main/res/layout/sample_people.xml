<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="75dp"
        android:layout_gravity="center"
        android:layout_height="75dp"
        android:src="@drawable/user_2"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        android:padding="5dp"
        android:layout_marginLeft="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:gravity="center_vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/userNamepeople"
            android:text="Username"
            android:textSize="18sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:maxWidth="200dp"
            android:ellipsize="end"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginLeft="5dp"
            android:paddingLeft="5dp"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/peopleemail"
                android:text="Email"
                android:maxLines="1"
                android:maxWidth="200dp"
                android:ellipsize="end"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="5dp"
                android:paddingLeft="5dp"/>
        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/sendfriendrequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="bottom|end"
            android:backgroundTint="@color/ChirperColor"
            app:fabSize="normal"
            app:srcCompat="@drawable/add_friend"
            app:tint = "@null"
            />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/cancelrequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="bottom|end"
            android:backgroundTint="@color/red"
            app:fabSize="normal"
            app:srcCompat="@drawable/ic_baseline_cancel_24"
            app:tint = "@null"
            android:visibility="gone"
            />
    </LinearLayout>



</LinearLayout>